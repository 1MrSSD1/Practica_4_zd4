<Window x:Class="WpfApp82.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp82"
        mc:Ignorable="d"
        Title="MainWindow" Background="Crimson" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Grid.Row="0" Grid.Column="0" Content="Введите N:" Margin="5"/>
            <TextBox Grid.Row="0" Grid.Column="1" Name="Boxn" Margin="5"/>
            <Button Grid.Row="2" Grid.Column="1" Content="OK" Margin="5" Click="CalculateButton_Click"/>
            <TextBlock x:Name="Blockk" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
